{
  "workflow_description": {
    "name": "alignment_RNA",
    "version": 2.0,
    "label": "Alignment RNA",
    "type": "alignment_RNA",
    "run_parameters": {
      "cpu": 35,
      "memory": 65
    },
    "inputs": "processed_fastq/{sample}*fastq.gz",
    "outputs": [
      "mapped/*",
      "logs/*",
      "qc_reports/*"
    ],
    "report_index": "qc_reports/all_samples/alignment_RNA_multiqc/multiqc.html",
    "reports":[
       "qc_reports/*"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired",
    "UMI"
  ],
  "gui_params": {
    "primary": {
      "reference": {
        "label": "Genomic Reference",
        "type": "enum",
        "default": ##INCLUDE:reference_info/default_reference.json##,
        "list": ##INCLUDE:reference_info/reference2.json##
      },
      "RNAseq_type" : {
        "label": "RNAseq type",
        "type": "enum",
        "default": "classic_rev",
        "list": {
          "classic_unstd": "Classic Unstranded",
          "classic_fwd": "Classic Forward",
          "classic_rev": "Classic Reverse",
          "quant_fwd": "QuantSeq FWD",
          "quant_rev": "QuantSeq REV",
          "sense": "Lexogen SENSE",
          "corall": "Lexogen CORALL"
        }
      },
      "type_of_extraction": {
        "label": "Type of extraction",
        "type": "enum",
        "default": "PolyA",
        "list": {
          "PolyA": "PolyA",
          "rRNA": "rRNA"
        }
      }
    },
    "detailed": {
      "mark_duplicates": {
        "label": "Mark duplicates",
        "type": "bool",
        "default": true
      },
      "umi_usage": {
        "label": "UMI usage",
        "type": "enum",
        "default": "mark_duplicates",
        "list": {
          "no": "Don't use UMI",
          "mark_duplicates": "Mark duplicates"
        }
      },
      "remove_duplicates": {
        "label": "Remove duplicates",
        "type": "bool",
        "default": false
      },
      "keep_not_markDups_bam": {
        "label": "Keep not_markDups_bam file",
        "type": "bool",
        "default": false
      },
      "max_intron": {
        "label": "Max intron",
        "type": "int",
        "default": 1000000
      },
      "strandness": {
        "label": "Strandness (unstr,fwd,rev)",
        "type": "enum",
        "default": "rev",
        "list": {
          "unstr": "Unstranded",
          "fwd": "Forward",
          "rev": "Reverse"
        },
        "conditions": {
          "value": {
            "RNAseq_type": {
              "classic_fwd": "fwd",
              "classic_rev": "rev",
              "quant_fwd": "fwd",
              "quant_rev": "fwd",
              "sense": "rev"
            }
          }
        }
      },
      "map_score": {
        "label": "Map score",
        "type": "string",
        "default": "0.66"
      },
      "map_perc": {
        "label": "Map perc",
        "type": "string",
        "default": "0.66"
      },
      "perc_mismatch": {
        "label": "Perc mismatch",
        "type": "string",
        "default": "0.1"
      },
      "get_cov_tracks": {
        "label": "Get coverage tracks",
        "type": "bool",
        "default": false
      },
       "lib_ROI": {
        "label": "Regions of interest",
        "type": "enum",
        "default": "rna",
        "list": {"rna": "RNA"}
      }
    }
  }
}
