{
  "workflow_description": {
    "name": "alignment_RNA",
    "version": 1.0,
    "label": "Alignment RNA",
    "type": "alignment_RNA",
    "inputs": "*/{sample}{read_pair_tag}.fastq.gz",
    "outputs": [
      "mapped/*"
    ]
  },
  "general_params": [
    "library_name",
    "sample_name",
    "lib_forward_read_length",
    "lib_reverse_read_length"
  ],
  "gui_params": {
    "primary": {
      "reference": {
        "label": "Genomic Reference",
        "type": "enum",
        "default": "GRCh38-p10",
        "list": {
          "Homo sapiens": {
            "GRCh37-p13": "GRCh37-p13",
            "GRCh38-p10": "GRCh38-p10"
          },
          "Mus musculus": {
            "GRCm38.p6-93": "GRCm38.p6-93"
          },
          "Arabidopsis thaliana": {
            "TAIR10-31": "TAIR10-31"
          },
          "Nothobranchius furzeri": {
            "Nfu_20150922": "Nfu_20150922",
            "NFZv2.0": "NFZv2.0"
          },
          "Rattus norvegicus": {
            "Rnor_6.0-91": "Rnor_6.0-91"
          },
          "Drosophila melanogaster": {
            "BDGP6-90": "BDGP6-90",
            "BDGP6-99": "BDGP6-99"
          },
          "Canis familiaris": {
            "CanFam3.1-90": "CanFam3.1-90",
            "CanFam3.1-101": "CanFam3.1-101"
          },
          "Trichinella spiralis": {
            "Tspiralis1-37": "Tspiralis1-37"
          },
          "Brassica napus": {
            "AST_PRJEB5043_v1": "AST_PRJEB5043_v1",
            "Bra_napus_v2": "Bra_napus_v2"
          },
          "Saccharomyces cerevisiae": {
            "R64-1-1.100": "R64-1-1.100"
          },
          "Prorhinotermes simplex": {
            "Peska_transcriptome": "Peska_transcriptome"
          },
          "Zootermopsis nevadensis": {
            "Znev_1_0": "Znev_1_0"
          },
          "Caenorhabditis elegans": {
            "WBcel235-102": "WBcel235-102"
          },
          "Danio rerio": {
            "GRCz11-102": "GRCz11-102"
          },
          "Cyprinus carpio": {
            "Common_carp_ncbi": "Common_carp_ncbi",
            "Hebao_red_carp_1.0-103": "Hebao_red_carp_1.0-103"
          }
        }
      },
      "RNAseq_type" : {
        "label": "RNAseq type",
        "type": "enum",
        "default": "classic_rev",
        "list": {
          "classic_unstd": "Classic Unstranded",
          "classic_fwd": "Classic Forward",
          "classic_rev": "Classic Reverse",
          "quant_fwd": "QuantSeq FWD",
          "quant_rev": "QuantSeq REV",
          "sense": "Lexogen SENSE",
          "corall": "Lexogen CORALL"
        }
      },
      "type_of_extraction": {
        "label": "Type of extraction",
        "type": "enum",
        "default": "PolyA",
        "list": {
          "PolyA": "PolyA",
          "rRNA": "rRNA"
        }
      }
    },
    "detailed": {
      "trim_adapters": {
        "label": "Trim adapters",
        "type": "string",
        "default": ""
      },
      "mark_duplicates": {
        "label": "Mark duplicates",
        "type": "bool",
        "default": true
      },
      "trim_quality": {
        "label": "Trim quality",
        "type": "bool",
        "default": false
      },
      "umi_usage": {
        "label": "UMI usage",
        "type": "enum",
        "default": "mark_duplicates",
        "list": {
          "no": "Don't use UMI",
          "mark_duplicates": "Mark duplicates"
        }
      },
      "remove_duplicates": {
        "label": "Remove duplicates",
        "type": "bool",
        "default": true
      },
      "keep_not_markDups_bam": {
        "label": "Keep not_markDups_bam file",
        "type": "bool",
        "default": false
      },
      "max_intron": {
        "label": "Max intron",
        "type": "int",
        "default": 1000000
      },
      "strandness": {
        "label": "Strandness",
        "type": "string",
        "default": "unstr",
        "conditions": {
          "value": {
            "RNAseq_type": {
              "classic_fwd": "fwd",
              "classic_rev": "rev",
              "quant_fwd": "fwd",
              "quant_rev": "fwd",
              "sense": "rev"
            }
          }
        }
      },
      "trim_left1": {
        "label": "Trim left 1",
        "type": "int",
        "default": 0,
        "conditions": {
          "value": {
            "RNAseq_type": {
              "quant_fwd": 12,
              "sense": 9
            },
            "UMI": {
              "Quantseq FWD": 6
            }
          }
        }
      },
      "trim_left2": {
        "label": "Trim left 2",
        "type": "int",
        "default": 0,
        "conditions": {
          "value": {
            "RNAseq_type": {
              "quant_rev": 12,
              "sense": 6
            }
          }
        }
      },
      "trim_right1": {
        "label": "Trim right 1",
        "type": "int",
        "default": 0
      },
      "trim_right2": {
        "label": "Trim right 2",
        "type": "int",
        "default": 0,
        "conditions": {
          "value": {
            "UMI": {
              "CORALL": 9
            }
          }
        }
      },
      "map_score": {
        "label": "Map score",
        "type": "string",
        "default": "0.66"
      },
      "map_perc": {
        "label": "Map perc",
        "type": "string",
        "default": "0.66"
      },
      "perc_mismatch": {
        "label": "Perc mismatch",
        "type": "string",
        "default": "0.66"
      },
      "min_length": {
        "label": "Min length",
        "type": "int",
        "default": 35
      }
    }
  }
}